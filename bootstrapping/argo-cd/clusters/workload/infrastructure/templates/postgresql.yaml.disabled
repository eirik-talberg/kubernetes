apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: postgresql
  namespace: argocd
  finalizers:
  - resources-finalizer.argocd.argoproj.io
spec:
  destination:
    namespace: prod
    server: {{ .Values.spec.destination.server }}
  project: default
  source:
    chart: postgresql
    repoURL: https://charts.bitnami.com/bitnami
    targetRevision: 12.1.3
    helm:
      releaseName: postgresql
      parameters:
        - name: auth.postgresPassword
          value: changeit
        - name: auth.username
          value: vault
        - name: auth.password
          value: changeit
  syncPolicy:
    automated: {}